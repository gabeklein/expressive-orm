{
    "compilerOptions": {
        "outDir": "lib/",
        "target": "ES6",
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": ["ES2018"],
        "baseUrl": ".",
        "rootDir": ".",
        "jsx": "react",
        "sourceMap": true,
    },
    "paths": {
        "@expressive/*": [
          "packages/*/src"
        ]
    }
}