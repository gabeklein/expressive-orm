{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "strict": true,
        "target": "ES2020",
        "types": ["node", "vitest/globals"],
        "paths": {
            "@expressive/*": [
              "packages/*/src"
            ]
        }
    },
    "exclude": [
      "**/node_modules",
      "**/dist"
    ]
}