{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--watchAll", "--runInBand", "--config=${workspaceFolder}/jest.config.json", "${input:test_suite}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeExecutable": "/usr/local/bin/node"
    },
    {
      "name": "Run index file",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "args": ["src/index.ts"],
      "runtimeArgs": ["--nolazy", "-r", "${workspaceFolder}/node_modules/ts-node/register/transpile-only"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ],
  "inputs": [
    {
      "id": "test_suite",
      "type": "promptString",
      "description": "Test you wish to run a debug session for."
    }
  ]
}