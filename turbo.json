{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": [],
      "outputs": ["coverage/**"]
    },
    "version": {
      "dependsOn": ["build"],
      "outputs": ["CHANGELOG.md", "package.json"]
    },
    "publish": {
      "dependsOn": ["^test", "^version"],
      "outputs": []
    }
  }
}